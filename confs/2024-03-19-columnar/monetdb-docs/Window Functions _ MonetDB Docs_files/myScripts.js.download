// OLd script just for down arrows
jQuery('.fa-caret-down').on('click', function(e) {
    e.preventDefault();
    $(this).parent().next("ul").toggle();
    if ($(this).hasClass('fas fa-caret-down')) {
        $(this).removeClass("fas fa-caret-down");
    }
});
